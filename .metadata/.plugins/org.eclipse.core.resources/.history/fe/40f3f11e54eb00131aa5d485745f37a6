import java.io.File;
import java.io.FileNotFoundException;
import java.util.Scanner;


public class Test {
	String internalBuffer = "";
	Scanner scanB = null;
	Scanner scanF = null;
	public int count;
	
	public Test(){
		scanB = new Scanner(internalBuffer);
		try {
			scanF = new Scanner(new File("Text.txt"));
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		}
	}
	
	public String next(){
		if(internalBuffer.length() == 0){
			getNextLine();
			return next();
		}
		else{
			String s = scanB.next();
			s = s.replaceAll("\\W", "");
			count++;
			return s;
		}
	}
	
	public boolean hasNext(){
		if(internalBuffer.length()<=0){
			return scanF.hasNext();
		}
		else{
			return true;
		}
	}

	private void getNextLine() {
		Scanner s = null;
		try {
			s = new Scanner(new File("Text.txt"));
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		}
		internalBuffer = s.nextLine();
	}
}
