import java.io.File;
import java.io.FileNotFoundException;
import java.util.Scanner;


public class Test {
	String internalBuffer = "";
	Scanner scan = new Scanner(internalBuffer);
	
	public String next(){
		if(internalBuffer.length() == 0){
			getNextLine();
			return next();
		}
		else{
			String s = scan.next();
			s = s.replaceAll("\\W", "");
			return s;
		}
	}

	private void getNextLine() {
		Scanner s = null;
		try {
			s = new Scanner(new File("Text.txt"));
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		}
		internalBuffer = s.nextLine();
	}
}
